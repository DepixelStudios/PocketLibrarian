<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketLibrarian" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:" type="">@color/gray_dark</item>-->
        <item name="android:textColorHint" type="">@color/white</item>
        <item name="android:background" type="">@android:color/white</item>
    </style>

    <style name="Shapes" >
        <item name="android:tint" type="">@color/white</item>
    </style>

    <style name="SearchBarText">
        <item name="android:textColor" type="">@color/gray_dark</item>
        <item name="android:textColorHint" type="">@color/gray_dark</item>
    </style>

    <style name="Bookmark">
        <item name="color" type="">@color/white</item>
    </style>

    <style name="Logo" >
        <item name="android:tint" type="">@color/gray_dark</item>
    </style>



    <style name="Empty" >
    </style>

    <style name="PocketLibrarian.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#34000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PocketLibrarian.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="PrimaryText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TertiaryText">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="ash_white_text">
        <item name="android:textColor" type="">@color/almost_black</item>
    </style>
    <style name="PocketLibrarian.NoActionBar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PocketLibrarian.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="myDialog" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>